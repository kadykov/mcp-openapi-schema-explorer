{
  "name": "mcp-openapi-schema-explorer",
  "version": "1.2.1",
  "description": "MCP OpenAPI schema explorer",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "mcp-openapi-schema-explorer": "dist/src/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir -p dist && npx tsc && chmod +x dist/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadykov/mcp-openapi-schema-explorer.git"
  },
  "keywords": [
    "mcp",
    "openapi"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kadykov/mcp-openapi-schema-explorer/issues"
  },
  "homepage": "https://github.com/kadykov/mcp-openapi-schema-explorer#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "swagger2openapi": "7.0.8",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^5.1.1",
    "@eslint/js": "^9.29.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.2",
    "@types/node-fetch": "^2.6.12",
    "@types/swagger2openapi": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "axios": "^1.10.0",
    "eslint": "^9.29.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-silent-reporter": "^0.6.0",
    "license-checker": "^25.0.1",
    "msw": "^2.10.2",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
